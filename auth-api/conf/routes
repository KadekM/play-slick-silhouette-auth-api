# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST          /signin/credentials              controllers.SignInCredentialsController.signIn
#POST         /signin/:provider                controllers.SignInSocialController.signIn
# GET         /signout                         controllers.ApplicationController.signOut

#POST        /signup/reset                    controllers.SignUpController.resetPasswordRequest
POST        /signup                           controllers.SignUpController.signUpRequestRegistration
POST        /signup/password/create/:token    controllers.SignUpController.createPassword(token)

GET         /verify                           controllers.VerifyController.verify

# Users

GET        /users                             controllers.UsersController.listAll

# Permissions

PUT        /permissions                       controllers.PermissionsController.grant
DELETE     /permissions                       controllers.PermissionsController.revoke
GET        /permissions                       controllers.PermissionsController.listPossible
GET        /permissions/assigned              controllers.PermissionsController.listAssigned
